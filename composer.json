{
    "name": "madkom/pacto-php-client",
    "description": "Library to talk with pacto server and set expectations",
    "type": "vcs",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Darek Gafka",
            "email": "d.gafka@madkom.pl"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "psr/http-message": "^1.0",
        "php-http/httplug": "^1.0.0",
        "guzzlehttp/psr7": "^1.2.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4.1",
        "phpunit/phpunit": "^5.2.4",
        "php-http/guzzle6-adapter": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Madkom\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
